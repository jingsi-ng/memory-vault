---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabaseClient';

const { data: texts, error } = await supabase
  .from('preserved_texts')
  .select(`
    *,
    keeper_profiles (
      keeper_name
    )
  `)
  .order('preservation_date', { ascending: false })
  .limit(5);

const { count: textCount } = await supabase
  .from('preserved_texts')
  .select('*', { count: 'exact', head: true });

const { count: keeperCount } = await supabase
  .from('keeper_profiles')
  .select('*', { count: 'exact', head: true });

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toISOString().split('T')[0].replace(/-/g, '.');
}

function getThreatClass(level: string) {
  switch(level?.toLowerCase()) {
    case 'critical': return 'threat-critical';
    case 'high': return 'threat-high';
    case 'medium': return 'threat-medium';
    default: return 'threat-low';
  }
}

function getBadgeClass(classification: string) {
  switch(classification?.toUpperCase()) {
    case 'DYSTOPIA': return 'badge-accent';
    case 'PHILOSOPHY': return 'badge-secondary';
    case 'CYBERPUNK': return 'badge-primary';
    default: return 'badge-primary';
  }
}
---

<Layout title="THE HEARTH">
  <section class="mb-12 animate-fade-in">
    <div class="text-center mb-8">
      <div class="inline-block mb-4">
        <div class="text-6xl md:text-8xl font-display font-black animate-burn">451</div>
      </div>
      <h1 class="text-3xl md:text-5xl mb-4 tracking-wider">PROJECT 
        <span class="neon-primary">MEMORY VAULT</span>
      </h1>
      <p class="text-xl md:text-2xl text-neutral-light font-mono italic max-w-2xl mx-auto">
        "They burned the books. We became them."
      </p>
    </div>
    <div class="flex flex-wrap justify-center gap-4 mt-8">
      <a href="/posts" class="btn btn-primary">ENTER THE LIBRARY</a>
      <a href="/posts/new" class="btn btn-secondary">PRESERVE A TEXT</a>
      <a href="/auth/signup" class="btn btn-ghost">BECOME A KEEPER</a>
    </div>
  </section>

  <section class="mb-12">
    <div class="card-secondary">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div>
          <div class="text-xs font-display text-neutral-light uppercase tracking-wider mb-1">System Status</div>
          <div class="flex items-center gap-2">
            <span class="status-dot status-online"></span>
            <span class="text-xl font-display text-green-500">ONLINE</span>
          </div>
        </div>
        <div>
          <div class="text-xs font-display text-neutral-light uppercase tracking-wider mb-1">Texts Preserved</div>
          <div class="text-3xl font-display text-primary">{textCount || 0}</div>
        </div>
        <div>
          <div class="text-xs font-display text-neutral-light uppercase tracking-wider mb-1">Active Keepers</div>
          <div class="text-3xl font-display text-secondary">{keeperCount || 0}</div>
        </div>
        <div>
          <div class="text-xs font-display text-neutral-light uppercase tracking-wider mb-1">Threat Level</div>
          <div class="text-xl font-display text-primary mb-2">ELEVATED</div>
          <div class="threat-bar">
            <div class="threat-bar-fill threat-high"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="section-header">
      <span class="section-title">Recently Preserved Texts</span>
    </div>

    {texts && texts.length > 0 ? (
      <div class="space-y-6">
        {texts.map((text, index) => (
          <article class="card group hover:border-secondary transition-all duration-300">
            <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
              <div>
                <div class="flex items-center gap-3 mb-2">
                  <span class="font-mono text-xs text-neutral">[FILE_{String(index + 1).padStart(3, '0')}]</span>
                  <span class={`badge ${getBadgeClass(text.classification)}`}>{text.classification || 'CLASSIFIED'}</span>
                </div>
                <h3 class="text-xl md:text-2xl group-hover:text-primary transition-colors">
                  <a href={`/posts/${text.id}`}>{text.book_title}</a>
                </h3>
                {text.original_author && (
                  <p class="text-neutral-light text-sm mt-1">by {text.original_author}</p>
                )}
              </div>            
              <div class="text-right">
                <div class="text-xs text-neutral font-mono">
                  {formatDate(text.preservation_date)}
                </div>
                <div class={`badge mt-2 ${text.burn_status === 'ENDANGERED' ? 'badge-accent' : 'badge-safe'}`}>
                  {text.burn_status || 'SAVED'}
                </div>
              </div>
            </div>     
            <div class="border-l-2 border-neutral pl-4 mb-4">
              <p class="text-text-muted leading-relaxed font-body italic">
                "{text.text_fragment?.substring(0, 200)}..."
              </p>
            </div>    
            <div class="flex items-center justify-between pt-4 border-t border-neutral/30">
              <div class="flex items-center gap-3">
                <div class="avatar avatar-sm">
                  {text.keeper_profiles?.keeper_name?.charAt(0).toUpperCase() || 'K'}
                </div>
                <div class="text-sm">
                  <div class="text-xs text-neutral uppercase tracking-wider">Keeper</div>
                  <div class="text-secondary font-mono">{text.keeper_profiles?.keeper_name || 'ANONYMOUS'}</div>
                </div>
              </div>
              <a href={`/posts/${text.id}`} class="btn btn-ghost text-xs glitch">DECRYPT FILE â†’</a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="card text-center py-12">
        <div class="text-6xl mb-4">ðŸ“š</div>
        <h3 class="text-2xl mb-4">The Vault is Empty</h3>
        <p class="text-neutral-light mb-6">No texts have been preserved yet. Be the first Memory Keeper.</p>
        <a href="/posts/new" class="btn btn-primary">PRESERVE YOUR FIRST TEXT</a>
      </div>
    )}

    {texts && texts.length > 0 && (
      <div class="text-center mt-8">
        <a href="/posts" class="btn btn-secondary">
          VIEW FULL ARCHIVE â†’
        </a>
      </div>
    )}
  </section>

  <section class="mt-16">
    <div class="card-accent text-center py-8">
      <blockquote class="text-lg md:text-xl italic text-text-muted max-w-3xl mx-auto leading-relaxed">
        "There must be something in books, things we can't imagine, to make a woman stay in a burning house; there must be something there. You don't stay for nothing."
      </blockquote>
      <cite class="block mt-4 text-accent font-display text-sm tracking-wider">
        â€” RAY BRADBURY, FAHRENHEIT 451
      </cite>
    </div>
  </section>
</Layout>
